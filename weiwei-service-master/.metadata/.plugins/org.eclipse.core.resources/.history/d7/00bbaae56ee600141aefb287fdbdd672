		try {
			conn = dataSource.getConnection();
			DBHelper dbh = new DBHelper(conn);
			result = dbh.getResult(sql);
			
			
			ResultSet rs = ps.executeQuery();
			
			rs.close();
			ps.close();
			return customer;
		} catch (SQLException e) {
			throw new RuntimeException(e);
		} finally {
